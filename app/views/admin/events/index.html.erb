<h1>イベント管理</h1>

<%= link_to "新しいイベントを作成", new_admin_event_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>日時</th>
      <th>場所</th>
      <th>公開状態</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= event.location %></td>
        <td><%= event.published ? "公開中" : "非公開" %></td>
        <td>
          <%= link_to "編集", edit_admin_event_path(event), class: "btn btn-warning" %>
          <%= link_to "削除", admin_delete_event_path(event), data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
          <%= link_to "集計", summary_admin_event_path(event), class: "btn btn-primary", style: "margin-right: 10px;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
