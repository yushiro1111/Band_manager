<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
  <div class="card shadow" style="width: 60rem; border-radius: 10px;">
    <div class="card-header text-center" style="background-color: #007bff; color: white; border-radius: 10px;">
      <h2 style="font-size: 2.5rem;">バンド申請フォーム</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @band, local: true, class: "needs-validation" do |f| %>
        <!-- バンド名 -->
        <div class="mb-4 text-center">
          <%= f.label :name, "バンド名", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_field :name, class: "form-control form-control-lg mx-auto", placeholder: "バンド名を入力してください", required: true, style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- リーダー -->
        <div class="mb-4 text-center">
          <%= f.label :leader_id, "リーダー", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.collection_select :leader_id, User.all, :id, :name, prompt: "リーダーを選択してください", class: "form-select form-select-lg mx-auto", style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- ボーカル -->
        <div class="mb-4 text-center">
          <%= f.label :vocal, "ボーカル", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_field :vocal, class: "form-control form-control-lg mx-auto", placeholder: "ボーカルの名前を入力してください", style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- ギター -->
        <div class="mb-4 text-center">
          <%= f.label :guitar, "ギター", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_field :guitar, class: "form-control form-control-lg mx-auto", placeholder: "ギターの名前を入力してください", required: true, style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- ギター2 -->
        <div class="mb-4 text-center">
          <%= f.label :guitar2, "ギター2 (任意)", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_field :guitar2, class: "form-control form-control-lg mx-auto", placeholder: "ギター2の名前を入力してください", style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- ベース -->
        <div class="mb-4 text-center">
          <%= f.label :bass, "ベース", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_field :bass, class: "form-control form-control-lg mx-auto", placeholder: "ベースの名前を入力してください", required: true, style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- ドラム -->
        <div class="mb-4 text-center">
          <%= f.label :drum, "ドラム", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_field :drum, class: "form-control form-control-lg mx-auto", placeholder: "ドラムの名前を入力してください", required: true, style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- 注釈 -->
        <div class="mb-4 text-center">
          <%= f.label :notes, "注釈 (任意)", class: "form-label", style: "font-size: 1.5rem;" %>
          <%= f.text_area :notes, rows: 4, class: "form-control form-control-lg mx-auto", placeholder: "必要に応じて注釈を入力してください", style: "width: 80%; font-size: 1.5rem;" %>
        </div>

        <!-- 提出ボタン -->
        <div class="d-grid text-center">
          <%= f.submit "申請", class: "btn btn-primary btn-lg mx-auto", style: "font-size: 1.8rem; width: 50%;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
